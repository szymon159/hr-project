@model ApplicationDetailsViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <h1>Application details:</h1>
     @using (Html.BeginForm("Save", "Application", new { id = Model.ApplicationModel.Id }, FormMethod.Post, null, new { enctype = "multipart/form-data" }))
     {
        <div class="list-item">
            <div class="list-item-primary">
                <div class="list-item-title">
                    <h2 class="list-item-title-main">@Html.DisplayFor(modelItem => Model.ApplicationModel.JobTitle) </h2>
                    <p class="list-item-title-details">Status: 
                        <span class="application-status @Model.ApplicationModel.StatusCssClass">@Html.DisplayFor(modelItem => Model.ApplicationModel.Status)</span> 
                    </p>
                </div>
                @Html.ActionLink("Send application", "Apply", new { id = Model.ApplicationModel.Id, isEditing = true }, new { @class = "btn button lightgreen" })
            </div>
            @if (Model.IsEditing == true)
            {
                <div class="list-item-secondary">
                    <input type="submit" class="btn button lightgreen" value="Save changes" />
                </div>
                <div class="list-item-tertiary">
                    @Html.ActionLink("Cancel changes", "Index", "Application", null, new { @class = "btn button" })
                    @Html.ActionLink("Delete application", "Delete", new { id = Model.ApplicationModel.Id }, new { @class = "btn button lightred" })
                </div>
            }
            else
            {
                <div class="list-item-secondary">
                </div>
                <div class="list-item-tertiary">
                    @Html.ActionLink("Edit application", "Details", new { id = Model.ApplicationModel.Id, isEditing = true }, new { @class = "btn button" })
                    @Html.ActionLink("Delete application", "Delete", new { id = Model.ApplicationModel.Id }, new { @class = "btn button lightred" })
                </div>
            }
        </div>
        <div class="list-item-description">
            <div class="application-details">
                @Html.EditorFor(modelItem => Model, "ApplicationDetailsViewModel")
            </div>
        </div>
        <div class="list-item list-item-footer">
            <div class="list-item-primary">
                @Html.ActionLink("Back", "Index", "Application", null, new { @class = "btn button button-back" })
                @Html.ActionLink("Send application", "Apply", new { id = Model.ApplicationModel.Id, isEditing = true }, new { @class = "btn button lightgreen" })
            </div>
            @if (Model.IsEditing == true)
            {
                <div class="list-item-secondary">
                    <input type="submit" class="btn button lightgreen" value="Save changes" />
                </div>
                <div class="list-item-tertiary">
                    @Html.ActionLink("Cancel changes", "Index", "Application", null, new { @class = "btn button" })
                    @Html.ActionLink("Delete application", "Delete", new { id = Model.ApplicationModel.Id }, new { @class = "btn button lightred" })
                </div>
            }
            else
            {
                <div class="list-item-secondary">
                </div>
                <div class="list-item-tertiary">
                    @Html.ActionLink("Edit application", "Details", new { id = Model.ApplicationModel.Id, isEditing = true }, new { @class = "btn button" })
                    @Html.ActionLink("Delete application", "Delete", new { id = Model.ApplicationModel.Id }, new { @class = "btn button lightred" })
                </div>
            }
        </div>
     }
</body>

